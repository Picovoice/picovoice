{
  "name": "voice-timer",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:browser": "vite",
    "dev": "tsc && concurrently vite \"wait-on tcp:5173 && electron .\" \"tsc -w\"",
    "build": "vue-tsc --noEmit && vite build && tsc && electron-builder",
    "preview": "vite preview && tsc && electron .",
    "lint": "eslint --ext .js,.ts,.vue",
    "copy": "node scripts/copy.js"
  },
  "main": "dist/electron/main/main.js",
  "dependencies": {
    "@picovoice/picovoice-vue": "~3.0.3",
    "@picovoice/web-voice-processor": "~4.0.8"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "concurrently": "^8.2.0",
    "electron": "^25.8.4",
    "electron-builder": "^24.4.0",
    "eslint": "^8.43.0",
    "eslint-plugin-vue": "^9.15.1",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-plugin-electron": "^0.12.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue": "^3.3.4",
    "vue-tsc": "^1.8.2",
    "wait-on": "^7.0.1"
  },
  "build": {
    "files": [
      "dist/**/*",
      "package.json"
    ]
  }
}
