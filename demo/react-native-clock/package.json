{
  "name": "react-native-clock",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "copy": "node copy.js",
    "start": "react-native start",
    "android-run": "react-native run-android",
    "android-install": "yarn && yarn copy",
    "android-bundle": "react-native bundle --dev false --platform android --entry-file index.js --bundle-output ./android/picovoice-rn-clock-app/src/main/assets/app.jsbundle --assets-dest ./android/picovoice-rn-clock-app/src/main/res/",
    "ios-run": "react-native run-ios",
    "ios-link": "cd ios && pod install && cd ..",
    "ios-install": "yarn && yarn copy && yarn ios-link",
    "ios-bundle": "react-native bundle --dev false --platform ios --entry-file index.js --bundle-output ios/app.jsbundle"
  },
  "dependencies": {
    "@picovoice/picovoice-react-native": "^3.0.0",
    "@picovoice/porcupine-react-native": "^3.0.0",
    "@picovoice/react-native-voice-processor": "^1.2.0",
    "@picovoice/rhino-react-native": "^3.0.0",
    "moment": "^2.29.1",
    "prettier": "^2.8.0",
    "react": "^17.0.2",
    "react-moment": "^1.1.1",
    "react-native": "^0.68.7",
    "react-native-material-bottom-navigation": "^1.0.5",
    "react-native-notification-sounds": "^0.5.5",
    "react-native-vector-icons": "^8.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/runtime": "^7.13.9",
    "@types/react": "^17.0.35",
    "@types/react-native": "^0.68.7",
    "babel-jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.65.2",
    "react-test-renderer": "^17.0.2",
    "typescript": "^4.9.3"
  }
}
